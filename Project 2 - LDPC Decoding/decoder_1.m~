function [out, b_hat] = decoder_1(degree,y,in)
  
% This implements the variable node
   
for ii = 1:degree    
    ind = find([1:degree]~=ii); %indices different from ii (extrinsic infos)
    
    
    if all(in(ind)==-y)
      out(ii) = -y;
    else
      out(ii) = y;
      
    end
 end
  
  
  
  
  
  if all(in == -y)
    
    b_hat = -y;
    
  else
    
    b_hat = y;
    
  end
  
  
  
